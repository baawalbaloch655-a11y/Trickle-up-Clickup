# Database
POSTGRES_USER=trickleup
POSTGRES_PASSWORD=trickleup_secret
POSTGRES_DB=trickleup_db
DATABASE_URL="postgresql://trickleup:trickleup_secret@localhost:5432/trickleup_db?schema=public"

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (change in production!)
JWT_ACCESS_SECRET=your_super_secret_access_key_change_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# App
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# S3 / Object Storage (optional, for file uploads)
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=trickleup-files
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_REGION=us-east-1

# Email (optional, nodemailer / SendGrid)
